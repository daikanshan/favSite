<p id="notice"><%= notice %></p>

<h1>Listing Admin Users</h1>
<div id="quick-option" base-url="<%= admin_users_url %>">
  <div class="btn-toolbar" role="toolbar">
    <div class="btn-group" role="group">
      <a href="<%= new_admin_user_path %>" data-method="get" rel="nofollow" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i>
        添加新用户
      </a>
    </div>
    <div class="btn-group" role="group">
      <a id="view" class="btn btn-info" disabled="disabled">
        <i class="glyphicon glyphicon-align-justify"></i>
        详细信息
      </a>
      <a id="edit" class="btn btn-info" disabled="disabled">
        <i class="glyphicon glyphicon-pencil"></i>
        编辑
      </a>

    </div>
    <div class="btn-group" role="group">
      <a id="del" rel="nofollow" class="btn btn-danger" disabled="disabled">
        <i class="glyphicon glyphicon-trash"></i>
        删除
      </a>
    </div>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>
        <label class="checkbox">
          <input type="checkbox" class="p_checkbox" id="check_all">
        </label>
        <br>
      </th>
      <th>用户名</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
    <tr class="item_line">
        <td>
          <label class="checkbox">
            <input type="checkbox" class="p_checkbox" value="<%= admin_user.id %>">
          </label>
        </td>
        <td><%= admin_user.username %></td>
        <td><%= link_to '显示', admin_user %></td>
        <td><%= link_to '编辑', edit_admin_user_path(admin_user) %></td>
        <td><%= link_to '删除', admin_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

